{
  "name": "shopsmart-backend",
  "version": "1.0.0",
  "description": "Backend API for ShopSmart",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --testPathPattern=tests --detectOpenHandles",
    "test:unit": "jest --testPathPattern=tests/unit --detectOpenHandles",
    "test:integration": "jest --testPathPattern=tests/integration --detectOpenHandles",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "build": "echo 'No build step required for server'",
    "lint": "echo 'No linter configured yet'"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testTimeout": 15000
  },
  "dependencies": {
    "@prisma/client": "^7.4.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "nodemon": "^3.1.0",
    "prisma": "^7.4.0",
    "supertest": "^6.3.4"
  }
}
